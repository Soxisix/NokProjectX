<UserControl x:Class="NokProjectX.Wpf.Views.Transaction.TransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NokProjectX.Wpf.Views.Transaction"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#FFE6E6E6"
             TextElement.Foreground="Black"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="14"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             UseLayoutRounding="True"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d"
             Foreground="Black">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0"
                             Padding="10">
            <Image Width="200"
                   Height="200"
                   Source="/NokProjectX.Wpf;component/Resources/defaultImg.png">
            </Image>
        </materialDesign:Card>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0"
                             Padding="10"
                             Grid.Row="1"
                             Grid.Column="0"
                             Margin="0,5,0,0">
            <Border HorizontalAlignment="Stretch">
                <Border.Background>
                    <ImageBrush Stretch="Fill"
                                ImageSource="/NokProjectX.Wpf;component/Resources/searchInput.png">
                    </ImageBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                             Grid.Column="0"
                             VerticalContentAlignment="Center"
                             BorderThickness="0, 0 ,0 ,0"
                             VerticalAlignment="Stretch"
                             Background="Transparent"
                             materialDesign:HintAssist.Hint="Search"
                             Text="{Binding SearchText, Delay=500, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5,2,2,2">

                    </TextBox>
                    <Button Style="{DynamicResource MaterialDesignToolButton}"
                            Grid.Column="1"
                            Margin="0,0,5,0">
                        <materialDesign:PackIcon Kind="Magnify">
                        </materialDesign:PackIcon>
                    </Button>
                </Grid>
            </Border>
        </materialDesign:Card>
        <materialDesign:Card Height="280"
                             materialDesign:ShadowAssist.ShadowDepth="Depth0"
                             Grid.Row="0"
                             Grid.Column="1"
                             Grid.RowSpan="2"
                             Margin="5,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="45*" />
                    <RowDefinition Height="45*" />
                    <RowDefinition Height="46*" />
                    <RowDefinition Height="45*" />
                </Grid.RowDefinitions>
                <TextBlock Margin="10,10,10,5"
                           FontSize="16"
                           FontWeight="SemiBold">
                    Tarpaulin
                </TextBlock>
                <TextBlock Margin="10,5"
                           FontSize="12"
                           Grid.Row="1">
                    Description : Tarpaulin
                </TextBlock>
                <TextBlock Margin="10,5,10,10"
                           FontSize="12"
                           Grid.Row="2">
                    Current Stock: 120 ft
                </TextBlock>
                <Border Grid.Row="2"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="0,0,0,1">
                </Border>
                <TextBox FontWeight="SemiBold"
                         BorderThickness="0,0,0,0"
                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                         Margin="10"
                         Grid.Row="3">
                    P 120.00
                </TextBox>
                <Border Grid.Row="3"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="0,0,0,1">
                </Border>
                <Grid Grid.Row="4"
                      Margin="10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center"
                               FontSize="10"
                               Margin="0,0,5,0">
                        Qty:
                    </TextBlock>
                    <Border Grid.Column="1"
                            Margin="0,0,5,0">
                        <Border.Background>
                            <ImageBrush Stretch="Fill"
                                        ImageSource="/NokProjectX.Wpf;component/Resources/searchInput.png">
                            </ImageBrush>
                        </Border.Background>
                        <TextBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="10"
                                 Width="40"
                                 BorderThickness="0,0,0,0" />

                    </Border>


                    <TextBlock Grid.Column="2"
                               VerticalAlignment="Center"
                               FontSize="10"
                               Margin="0,0,5,0">
                        Size
                    </TextBlock>
                    <Border Grid.Column="3"
                            Margin="0,0,5,0">
                        <Border.Background>
                            <ImageBrush Stretch="Fill"
                                        ImageSource="/NokProjectX.Wpf;component/Resources/searchInput.png">
                            </ImageBrush>
                        </Border.Background>
                        <TextBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="10"
                                 Width="40"
                                 BorderThickness="0,0,0,0" />

                    </Border>
                    <TextBlock Grid.Column="4"
                               VerticalAlignment="Center"
                               FontSize="10"
                               Margin="0,0,5,0">
                        x
                    </TextBlock>
                    <Border Grid.Column="5"
                            Margin="0,0,5,0">
                        <Border.Background>
                            <ImageBrush Stretch="Fill"
                                        ImageSource="/NokProjectX.Wpf;component/Resources/searchInput.png">
                            </ImageBrush>
                        </Border.Background>
                        <TextBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="10"
                                 Width="40"
                                 BorderThickness="0,0,0,0" />

                    </Border>

                </Grid>
                <Border Grid.Row="4"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="0,0,0,1">
                </Border>
                <Grid Grid.Row="5"
                      Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center"
                               FontSize="10">
                        Description:
                    </TextBlock>
                    <Border Grid.Column="1"
                            Margin="5,0,0,0">
                        <Border.Background>
                            <ImageBrush Stretch="Fill"
                                        ImageSource="/NokProjectX.Wpf;component/Resources/searchInput.png">
                            </ImageBrush>
                        </Border.Background>
                        <TextBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="10"
                                 BorderThickness="0,0,0,0" />

                    </Border>
                </Grid>
                <Border Grid.Row="5"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="0,0,0,1">
                </Border>
                <Button Width="220"
                        SnapsToDevicePixels="True"
                        BorderThickness="0"
                        Grid.Row="6"
                        Height="30"
                        Margin="10,10"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}"
                               BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                ImageSource="/NokProjectX.Wpf;component/Resources/addtoCart.png">
                                    </ImageBrush>

                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                        ImageSource="/NokProjectX.Wpf;component/Resources/addtoCartHover.png" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0"
                             Grid.Row="2"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Margin="0,5,0,0">
            <ListView>
                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="Product Code">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextAlignment="Right"
                                               Text="{Binding ProductCode}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Product Name">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextAlignment="Right"
                                               Text="{Binding ProductName}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Description">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextAlignment="Right"
                                               Text="{Binding Description}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </materialDesign:Card>
        <materialDesign:Card Grid.Column="2"
                             Grid.Row="0"
                             Grid.RowSpan="2"
                             Padding="10"
                             Margin="5,0,0,0">
            <Grid>
                <Grid>

                </Grid>

            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
